
{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "functions": {
    "api/start-challenge.js": {
      "maxDuration": 30
    },
    "api/verify-location.js": {
      "maxDuration": 30
    },
    "api/challenge-status.js": {
      "maxDuration": 30
    }
  }
}
